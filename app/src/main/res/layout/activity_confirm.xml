<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.handyman.mender.handyman.activity.ConfirmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Dispute Amount"
            android:textColor="@color/primary_light_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:paddingLeft="10dp"
            android:text="If, for any reason, you feel the final bill is incorrect, please submit the changes here."
            android:textAlignment="center"
            android:textColor="@color/primary_text_color"
            android:textSize="14sp" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Service"
                    android:textColor="@color/primary_text_color"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Current"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change to"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text_color"
                    android:textSize="16sp" />

            </TableRow>

            <View
                android:id="@+id/view1"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorAccent"
                android:visibility="visible" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Drive Time"
                    android:textColor="@color/primary_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$00.00"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edited_drive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="$00.00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Labor Time"
                    android:textColor="@color/primary_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$00.00"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edited_labor_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="$00.00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Material Cost"
                    android:textColor="@color/primary_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$00.00"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edited_material_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="$00.00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp" />
            </TableRow>

            <View
                android:id="@+id/view"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:visibility="visible" />


        </TableLayout>


        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:text="Please note:  Due to our staff confirming the changed total, this jobs payment maybe delayed."
            android:textAlignment="center"
            android:textColor="@color/primary_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:background="@drawable/sharpcorners"
            android:text="Back"
            android:textColor="@color/primary_text_color" />

        <Button
            android:id="@+id/btnconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/sharpcorners"
            android:text="Confirm Job"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</RelativeLayout>