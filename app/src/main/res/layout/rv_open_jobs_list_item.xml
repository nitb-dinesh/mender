<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="?android:attr/selectableItemBackground"
   >


    <RelativeLayout
        android:id="@+id/rel_exterior"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="4dp"
            android:background="@drawable/roundedbutton"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/request_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/master_lin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".9"
                android:background="@drawable/roundedbutton"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/job_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:text="Job Title"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".75"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:paddingLeft="10dp"
                    android:text="An apple a day keeps the doctor away. This is an amazing app. You can use this app to book appointments with handyman to get your daily tasks done easily."
                    android:textColor="@color/primary_text_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/job_location"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight=".45"
                    android:background="@color/colorPrimary"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="2"
                    android:paddingLeft="10dp"
                    android:text="An apple a day keeps the doctor away. This is an amazing app. You can use this app to book appointments with handyman to get your daily tasks done easily."
                    android:textColor="@color/primary_hint_color"
                    android:textSize="10sp"
                    android:textStyle="italic" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
