<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="2"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="2">


            <TextView
                android:gravity="center"
                android:textColor="@color/primary_text_color"
                android:text="Add Image "
                android:layout_weight="1"
                android:id="@+id/imageDetails"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


            <EditText
                android:layout_weight="1"
                android:gravity="bottom"
                android:id="@+id/materialCost"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="@string/material_cost_hint"
                android:inputType="numberDecimal"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/primary_text_color" />
        </LinearLayout>


        <ImageView
            android:padding="16dp"
            android:id="@+id/cancelUpload"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_close_black_36dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/reciptImage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/clickReciptImage"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/sharpcorners"
            android:elevation="10dp"
            android:gravity="center"
            android:text="Take Picture"
            android:textColor="@color/primary_text_color" />



        <Space
            android:layout_width="24dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/galleryReceiptImage"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/sharpcorners"
            android:elevation="10dp"
            android:gravity="center"
            android:text="Upload"
            android:textColor="@color/primary_text_color" />



    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/saveMaterialReceipt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/sharpcorners"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Save"
        android:textColor="@color/primary_text_color" />


</LinearLayout>