<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_light_text_color</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/primary_light_text_color</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:colorBackground">?attr/editTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/red_pending_job</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red_pending_job</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/black</item>
    </style>


    <style name="mainButtons">
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:background">@color/main_button_bg</item>
        <item name="android:backgroundTint">@color/main_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_button_textSize</item>

    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:buttonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>


</resources>
